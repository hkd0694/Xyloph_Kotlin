<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="도"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/do1" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_red_dark"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintEnd_toStartOf="@+id/re"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="레"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/re" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_orange_dark"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/mi" app:layout_constraintStart_toEndOf="@+id/do1"
            android:layout_marginStart="34dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="미"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/mi" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_orange_light"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/fa" app:layout_constraintStart_toEndOf="@+id/re"
            android:layout_marginStart="21dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="파"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/fa" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_green_light"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/sol" app:layout_constraintStart_toEndOf="@+id/mi"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="솔"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/sol" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_blue_light"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/ra" app:layout_constraintStart_toEndOf="@+id/fa"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="시"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/si" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_purple"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/do2" app:layout_constraintStart_toEndOf="@+id/ra"
            android:layout_marginStart="19dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="도"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/do2" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"
            android:layout_marginBottom="72dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_red_dark"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/si"
            android:layout_marginStart="22dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="라"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ra" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
            android:layout_marginBottom="56dp" android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_blue_dark"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/si" app:layout_constraintStart_toEndOf="@+id/sol"
            android:layout_marginStart="17dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>